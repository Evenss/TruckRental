<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.computer.hdu.truckrental" >

    <!-- To auto-complete the email text field in the login form with the home_btn_user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DriverLoginActivity"
            android:label="@string/label_driver_login">
            <intent-filter>
                <!--<action android:name=""/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".UserRegisterActivity"
            android:label="@string/label_register_user">
            <intent-filter>
                <!--<action android:name=""/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".DriverRegisterActivity"
            android:label="@string/label_register_driver">
            <intent-filter>
                <!--<action android:name=""/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".RuleDriverShowActivity"
            android:label="@string/label_driver_rule">
            <intent-filter>
                <!--<action android:name=""/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>